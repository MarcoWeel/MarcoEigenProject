@model Eigenproject.Models.UserModel

@{
    ViewData["Title"] = "DetailsUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var oldusername = Model.UserName;
}


<div class="postBox" style="margin-top: 80px; padding-left: 20px">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style="color: #fff">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10" style="color: #fff">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2" style="color: #fff">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10" style="color: #fff">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2" style="color: #fff">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10" style="color: #fff">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2" style="color: #fff">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10" style="color: #fff">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
    </dl>
    <div>
        @Html.ActionLink("Logout", "LogOutUser", "User", null, new {@style="color : #fff;"}) |
        @Html.ActionLink("Edit", "UpdateUser", new {username = oldusername}, new {@style = "color : #fff;"}) |
        <a style="color: #fff" asp-controller="Post" asp-action="ViewPosts">Back to main page</a>
    </div>
</div>

