@model Eigenproject.Models.UserModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}


<div class="postBox" style="margin-top: 80px; text-align: center">
    <h4 style="color: #fff">Login here</h4>
    <div class="row" >
        <div class="col-md-4" style="margin-left: 340px">
            <form asp-action="LoginUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label" style="color: #fff"></label>
                    <input asp-for="UserName" class="form-control"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label" style="color: #fff"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div class="center">
        <a style="color: #fff" asp-controller="User" asp-action="RegisterUser">Don't have an account? register here!</a>
    </div>
    <div class="center">
        <a style="color: #fff" asp-controller="Post" asp-action="ViewPosts">Back to main page</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
