@using System.IO
@using LogicLayerLibrary.ExtensionMethods
@using Microsoft.AspNetCore.Http
@model IEnumerable<Eigenproject.Models.ViewModels.PostFileViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "ViewPosts";
}


<h1 style="padding-top: 50px">ViewPosts</h1>

<p>
    <a asp-action="CreatePost">Create New</a>
</p>
@foreach (var item in Model)
{
    var oldLikeAmount = item.Likes;
    string path = item.File;
    var extension = System.IO.Path.GetExtension(path);
    <div class="postBox">
        <h5 class="center">@item.Title</h5>
        <img src="@path" class="centerImage" />
        @Context.GetCurrentUserModel().UserName
        @*<button value="@item.ID" class="btn-primary btn-Like">button</button>*@
        @if (oldLikeAmount == item.Likes)
        {
            <input type="image" src="Images/07b18101-b620-4815-8b46-0a63abee3403_tribal bitch (1).png" class="btn-Like" value="@item.ID" />
        }
        else
        {
            <input type="image" src="Images/8e934930-d2bc-4575-a8ad-03ba4f7f0ebf_achtergrond.png" class="btn-DisLike" value="@item.ID" />
        }
        <span class="Aantal-Likes">@item.Likes </span>
    </div>
}
@section Scripts {
    <script src="~/js/Like.js"></script>
}
